@page "/image-upload"

<PageTitle>Загрузка</PageTitle>

<br />

<AuthorizeView Context="upload">
    <NotAuthorized>
        Нет доступа.
    </NotAuthorized>
    <Authorized>
        <Form Model="@ImageFile">
            <FormItem>
                <div class="custom-file">
                    <InputFile OnChange="OnInputFileChange" id="inputFileField" class="custom-file-input" />
                    <span class="custom-file" for="inputFileField"></span>
                    <AntDesign.Button OnClick="SaveAsync" Type="AntDesign.ButtonType.Primary" HtmlType="submit">
                        Сохранить
                    </AntDesign.Button>
                </div>
            </FormItem>
        </Form>
    </Authorized>
</AuthorizeView>